<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="StackPane">
	
	<ImageView fx:id="backgroundImageView" preserveRatio="true" />
	
	<GridPane>
		
		<rowConstraints>
			<RowConstraints vgrow="ALWAYS" valignment="CENTER" />
			<RowConstraints vgrow="ALWAYS" valignment="CENTER" percentHeight="10" />
			<RowConstraints vgrow="ALWAYS" valignment="CENTER" />
			<RowConstraints vgrow="ALWAYS" valignment="CENTER" percentHeight="10" />
			<RowConstraints vgrow="ALWAYS" valignment="CENTER" percentHeight="10" />
			<RowConstraints vgrow="ALWAYS" valignment="CENTER" />
		</rowConstraints>
		
		<columnConstraints>
			<ColumnConstraints hgrow="ALWAYS" halignment="CENTER" />
			<ColumnConstraints hgrow="ALWAYS" halignment="CENTER" percentWidth="25" />
			<ColumnConstraints hgrow="ALWAYS" halignment="CENTER" />
		</columnConstraints>
		
		<children>
			<Label text="Tetris" styleClass="titleLabel" maxWidth="Infinity" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1" />
			<Button fx:id="playButton" text="Play!" maxWidth="Infinity" GridPane.rowIndex="3" GridPane.columnIndex="1" />
			<Button fx:id="quitButton" text="Quit" maxWidth="Infinity" GridPane.rowIndex="4" GridPane.columnIndex="1" />
		</children>
		
	</GridPane>
</fx:root>

